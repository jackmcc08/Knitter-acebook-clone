<% if current_user %>
  <div class="post-form-div">
    <div>
      <h3>Post:</h3>
    </div>
    <%= render partial: 'posts/form' %>
  </div>
<% end %>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post-div">
      <div class="post-content-author">
        <div class="poster">
          <p><%= User.find(post.user_id).username %></p>
        </div>
        <div class="post-content">
          <p class="post"><%= post.message %></p>
        </div>
      </div>
      <div class="likes-comment-buttons">
        <div class="likes">
          <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Approval' : 'Approvals'%></p>
        </div>
        <% if current_user %>
        <%= button_to "That's nice, sweetie", post_likes_path(post), method: :post, class: "like-button" %>
        <% end %>
        <button type="button" class="comments-toggle" id="<%= post.id %>">More Unsolicited Advice</button>
      </div>
      

      <div class="comments-content">
        <div class="top-comments" id="top-comments-<%=post.id%>">
          <%= render post.comments.order('created_at': :desc).limit(2) %>
        </div>


        <div class="all-comments" id="all-comments-<%=post.id%>">
          <%= render post.comments.order('created_at': :desc) %>
        </div>
      </div>

      <% if current_user %>
        <div class="new-comment-form">
          <div></div>
          <%= render partial: 'comments/form', locals: { post: post } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
